{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist-server",
    "rootDir": "./server",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./server/types", "./node_modules/@types"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}